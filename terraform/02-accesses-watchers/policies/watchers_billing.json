{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "aws-portal:View*",
        "ec2:Describe*",
        "cloudwatch:Describe*",
        "cloudwatch:ListMetrics",
        "autoscaling:Describe*",
        "cloudwatch:GetMetricStatistics",
        "elasticloadbalancing:Describe*",
        "ec2:DescribeAccountAttributes",
        "s3:ListAllMyBuckets",
        "s3:GetBucketLocation",
        "iam:Get*",
        "iam:List*",
        "rds:Describe*",
        "rds:ListTagsForResource",
        "support:*"
      ],
      "Resource": "*"
    }
  ]
}