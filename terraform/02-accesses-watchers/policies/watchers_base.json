{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::${tfstate_bucket_name}",
        "arn:aws:s3:::${tfstate_bucket_name}/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "sts:AssumeRole",
      "Resource": [
        ${assumable_roles}
      ]
    }
  ]
}
